## Use DOCKER_IMAGE_NAME envvar to specify docker image with tags
## User ARGS to pass arguments

.PHONY: docker\:build
## Build docker image
docker\:build: $(DOCKER)
   @BUILD_ARGS=`for arg in $$ARGS; do \
     printf -- '--build-arg %s=%s ' "$$arg" "$${!arg}"; \
   done`; \
   $(DOCKER) build --no-cache $$BUILD_ARGS -t $(DOCKER_IMAGE_NAME) .